<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    tools:context="com.earthsilen.depthfirsttraineeproject.DetailFromList.NewsDetails">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="349dp"
        android:layout_marginRight="349dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/backbtn"
        app:layout_constraintBottom_toTopOf="@+id/imgshow1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/tdetail"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/textdeboarder"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager" />

    <com.earthsilen.depthfirsttraineeproject.ClickableViewPager
        android:id="@+id/viewPager"
        android:layout_width="411dp"
        android:layout_height="235dp"
        android:layout_marginLeft="-13dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

</android.support.constraint.ConstraintLayout>

